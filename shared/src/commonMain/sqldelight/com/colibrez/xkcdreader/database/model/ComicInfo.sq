CREATE VIEW IF NOT EXISTS ComicInfo AS
SELECT
    ComicEntity.*,
    CASE WHEN FavoriteComicEntity.comic_num IS NULL THEN 0 ELSE 1  END AS isFavorite,
    CASE WHEN ReadComicEntity.comic_num IS NULL THEN 0 ELSE 1  END AS isRead
FROM ComicEntity
LEFT JOIN FavoriteComicEntity ON ComicEntity.num = FavoriteComicEntity.comic_num
LEFT JOIN ReadComicEntity ON ComicEntity.num = ReadComicEntity.comic_num;